<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:background="@drawable/back">

    <Button
        android:id="@+id/btn_youku"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="You Ku"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_red"/>
    <Button
        android:id="@+id/btn_ad"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="Advertisements"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_yellow"/>
    <Button
        android:id="@+id/btn_drop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="Drop Down"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_green"/>
    <Button
        android:id="@+id/btn_switch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="Switch"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_lightgreen"/>
    <Button
        android:id="@+id/btn_my_vp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="My View Pager"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_blue"/>
    <Button
        android:id="@+id/btn_wave"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        android:text="Wave"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/selector_btn_violet"/>

</LinearLayout>
